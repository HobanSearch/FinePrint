{
  "name": "fineprint-browser-extension",
  "displayName": "Fine Print AI",
  "version": "1.0.0",
  "description": "AI-powered legal document analysis for Terms of Service and Privacy Policies",
  "author": "Fine Print AI Team",
  "scripts": {
    "dev": "plasmo dev",
    "dev:chrome": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:safari": "plasmo dev --target=safari",
    "build": "plasmo build",
    "build:chrome": "plasmo build --target=chrome-mv3",
    "build:firefox": "plasmo build --target=firefox-mv2", 
    "build:safari": "plasmo build --target=safari",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-badge": "^1.0.4",
    "@radix-ui/react-button": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.0.5",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.294.0",
    "plasmo": "0.84.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.8.10",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "autoprefixer": "10.4.16",
    "eslint": "8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "tailwindcss": "3.3.5",
    "typescript": "5.2.2",
    "webextension-polyfill": "^0.10.0"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus",
      "notifications",
      "background",
      "scripting"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "optional_permissions": [
      "tabs",
      "bookmarks"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}