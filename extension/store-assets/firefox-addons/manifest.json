{
  "manifest_version": 2,
  "name": "Fine Print AI",
  "version": "1.0.0",
  "description": "AI-powered legal document analysis for Terms of Service and Privacy Policies. Protect yourself from problematic clauses with real-time analysis and monitoring.",
  
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "contextMenus",
    "alarms",
    "http://*/*",
    "https://*/*"
  ],
  
  "optional_permissions": [
    "tabs",
    "bookmarks"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Fine Print AI",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'",
  
  "web_accessible_resources": [
    "assets/*",
    "content-styles.css"
  ],
  
  "homepage_url": "https://fineprint.ai",
  
  "author": "Fine Print AI Team",
  
  "applications": {
    "gecko": {
      "id": "fineprint-ai@fineprint.ai",
      "strict_min_version": "90.0"
    }
  },
  
  "commands": {
    "analyze-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Analyze current page for legal issues"
    },
    "toggle-monitoring": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Toggle site monitoring for current page"
    }
  }
}