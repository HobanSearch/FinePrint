# Coolify Environment Configuration for Fine Print AI
# Copy this file to .env and fill in your values

# Domain Configuration
DOMAIN=fineprint.tech
PUBLIC_URL=https://fineprint.tech

# Database Configuration
DB_NAME=fineprintai
DB_USER=fineprintai_user
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_MAX_MEMORY=1gb

# Security Keys (Generate secure random strings)
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (from your Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_ANNUAL=price_starter_annual_id
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
STRIPE_PRICE_PROFESSIONAL_ANNUAL=price_professional_annual_id
STRIPE_PRICE_TEAM_MONTHLY=price_team_monthly_id
STRIPE_PRICE_TEAM_ANNUAL=price_team_annual_id

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@fineprint.tech

# Application Settings
LOG_LEVEL=info
RATE_LIMIT_MAX=1000
WORKER_CONCURRENCY=5

# AI Model Configuration
OLLAMA_MODELS=phi-2:2.7b,mistral:7b,llama2:13b

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Backup Configuration (Optional)
BACKUP_S3_BUCKET=
BACKUP_S3_KEY=
BACKUP_S3_SECRET=
BACKUP_S3_REGION=us-east-1

# Feature Flags
ENABLE_DOCUMENT_MONITORING=true
ENABLE_API_ACCESS=true
ENABLE_TEAM_FEATURES=true
ENABLE_ANALYTICS=true

# Development/Debug (Set to false in production)
DEBUG=false
ENABLE_SWAGGER_DOCS=false