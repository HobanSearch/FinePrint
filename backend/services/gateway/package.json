{
  "name": "@fineprintai/gateway-service",
  "version": "1.0.0",
  "description": "Kong API Gateway service with enterprise-grade security and monitoring",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:kong": "kong start -c kong.conf",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "kong:reload": "kong reload",
    "kong:health": "kong health",
    "kong:admin": "curl -i http://localhost:8001/",
    "docker:build": "docker build -t fineprintai/gateway:latest .",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "dependencies": {
    "@fineprintai/shared-types": "*",
    "@fineprintai/shared-config": "*",
    "@fineprintai/shared-logger": "*",
    "@fineprintai/shared-cache": "*",
    "@fineprintai/shared-middleware": "*",
    "@fineprintai/shared-security": "*",
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "axios": "^1.6.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jose": "^5.1.3",
    "lodash": "^4.17.21",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "api-gateway",
    "kong",
    "microservices",
    "security",
    "rate-limiting",
    "jwt",
    "monitoring"
  ]
}