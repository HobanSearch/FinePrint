{
  "name": "@fineprint/sre-monitoring",
  "version": "1.0.0",
  "description": "SRE monitoring and incident response system for Fine Print AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t fineprint-sre-monitoring .",
    "docker:run": "docker-compose up -d",
    "prometheus:start": "docker run -d -p 9090:9090 -v ./prometheus.yml:/etc/prometheus/prometheus.yml prom/prometheus",
    "grafana:start": "docker run -d -p 3000:3000 grafana/grafana",
    "jaeger:start": "docker run -d -p 16686:16686 -p 14268:14268 jaegertracing/all-in-one:latest",
    "loki:start": "docker run -d -p 3100:3100 grafana/loki:latest",
    "chaos:init": "kubectl apply -f chaos/litmus-operator.yaml"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/exporter-jaeger": "^1.19.0",
    "@opentelemetry/exporter-prometheus": "^0.46.0",
    "@opentelemetry/instrumentation": "^0.46.0",
    "@opentelemetry/instrumentation-fastify": "^0.34.0",
    "@opentelemetry/instrumentation-http": "^0.46.0",
    "@opentelemetry/sdk-metrics": "^1.19.0",
    "@opentelemetry/sdk-node": "^0.46.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@prisma/client": "^5.7.0",
    "bullmq": "^5.1.0",
    "fastify": "^4.25.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "pagerduty": "^3.0.0",
    "pino": "^8.17.0",
    "pino-loki": "^2.1.3",
    "prom-client": "^15.1.0",
    "temporal-client": "^1.0.0",
    "tsx": "^4.7.0",
    "winston": "^3.11.0",
    "winston-loki": "^6.0.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}