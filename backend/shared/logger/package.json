{
  "name": "@fineprintai/shared-logger",
  "version": "1.0.0",
  "description": "Production-ready distributed logging and metrics system for Fine Print AI autonomous agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/**/*"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.46.0",
    "@opentelemetry/exporter-jaeger": "^1.18.1",
    "@opentelemetry/exporter-prometheus": "^0.46.0",
    "@opentelemetry/instrumentation-http": "^0.46.0",
    "@opentelemetry/instrumentation-fastify": "^0.33.0",
    "@opentelemetry/instrumentation-redis": "^0.35.0",
    "@opentelemetry/resources": "^1.18.1",
    "@opentelemetry/semantic-conventions": "^1.18.1",
    "fastify": "^4.25.2",
    "@fastify/websocket": "^8.3.1",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "pino-elasticsearch": "^7.1.0",
    "ioredis": "^5.3.2",
    "prometheus-client": "^15.1.0",
    "ws": "^8.16.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "bullmq": "^5.1.9",
    "date-fns": "^3.0.6",
    "cls-hooked": "^4.2.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "nodemailer": "^6.9.8",
    "slack-webhook": "^1.2.0",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.4",
    "elasticsearch": "^16.7.3",
    "loki-winston-transport": "^1.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.10",
    "@types/cls-hooked": "^4.3.8",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.14",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "peerDependencies": {
    "@fineprintai/shared-types": "workspace:*",
    "@fineprintai/shared-utils": "workspace:*",
    "@fineprintai/shared-config": "workspace:*",
    "@fineprintai/shared-security": "workspace:*"
