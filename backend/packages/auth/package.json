{
  "name": "@fineprintai/auth",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication and security utilities for Fine Print AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/**/*"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@fineprintai/shared-cache": "*",
    "@fineprintai/shared-config": "*",
    "@fineprintai/shared-logger": "*",
    "@fineprintai/shared-types": "*",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "crypto": "^1.0.1",
    "nodemailer": "^6.9.8",
    "twilio": "^4.20.0",
    "axios": "^1.6.5",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "express-slow-down": "^2.0.1",
    "ua-parser-js": "^1.0.37",
    "maxmind": "^4.3.12",
    "device-detector-js": "^3.0.3",
    "zxcvbn": "^4.4.2",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/nodemailer": "^6.4.14",
    "@types/ua-parser-js": "^0.7.39",
    "@types/zxcvbn": "^4.4.4",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}